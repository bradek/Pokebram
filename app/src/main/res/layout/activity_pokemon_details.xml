<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pokemon_yellow">

    <!-- The ScrollView can only have one child, so we wrap everything in a LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <Button
            android:id="@+id/buttonReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/return_label"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/pokemon_blue"
            android:textColor="@color/pokemon_yellow"/>

        <TextView
            android:id="@+id/textViewPokemonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/pokemon_blue"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewPokemonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="5dp"
            android:textColor="@color/pokemon_blue"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:id="@+id/textViewPokemonTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="5dp"
            android:textColor="@color/pokemon_blue"
            android:fontFamily="sans-serif-condensed"/>

        <ImageView
            android:id="@+id/imageViewPokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:contentDescription="@string/pokemon_image"/>

        <TextView
            android:id="@+id/textViewPokemonAbilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pokemon_blue"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed"/>
        <!-- Add any other style attributes that your other TextViews have -->
        />

        <TextView
            android:id="@+id/textViewHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/pokemon_blue"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:id="@+id/textViewWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/pokemon_blue"
            android:fontFamily="sans-serif-condensed"/>

        <LinearLayout
            android:id="@+id/flavorTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/red_border"
            android:layout_marginTop="8dp">
            <!-- The flavor text TextView will be added here -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">
            <!-- The stat TextViews will be added here -->
        </LinearLayout>
    </LinearLayout>
</ScrollView>
